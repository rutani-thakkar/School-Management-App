<h1>School Admins</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'school_admin', collection: @school_admins %>
  </tbody>
</table>
<% if can?(:create_school_admin, User)%>
  <%= link_to 'Add School Admin', new_user_path(school_admin: true) %>
<% end %>
