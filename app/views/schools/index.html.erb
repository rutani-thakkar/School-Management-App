<h1>Schools</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @schools %>
  </tbody>
</table>

<br>
<% if can?(:new, School)%>
  <%= link_to 'New School', new_school_path, class: "btn btn-primary" %>
<% end %>
