<h1>Students</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'student', collection: @students%>
  </tbody>
</table>

<% if can?(:create_student, User)%>
  <%= link_to 'Add Student', new_user_path %>
<% end %>
